@model SearchResult<Address>

@{
    var search = Model.SearchCriteria as AddressSearchViewModel;
}

@if (Model.Result.Any())
{
    <div class="table-responsive-sm">
        <table class="table table-striped table-bordered">

            <caption>
                <p>
                    <strong>
                        @CommonText.Total:
                    </strong>
                    @Model.TotalResultsCount.ToString("N0")
                </p>


                <cs-pager cs-pager-ul-class="pagination"
                          cs-pager-li-other-class="page-item"
                          cs-pager-link-other-class="page-link"
                          cs-pager-li-current-class="page-item active"
                          cs-pager-link-current-class="page-link"
                          cs-paging-pagesize="@Model.PageSize"
                          cs-paging-pagenumber="@Model.PageNumber"
                          cs-paging-totalitems="@Model.TotalResultsCount"
                          asp-all-route-data="@search.ToRouteValueDictionary()"
                          cs-ajax-target="#list"
                          cs-ajax-begin="block('#list')"
                          cs-ajax-complete="unblock('#list')"
                          asp-controller="Address"
                          asp-action="Index">

                </cs-pager>

                <input type="hidden" data-route value="@Url.RouteUrl(search.ToRouteValueDictionary(true))" />

            </caption>

            <thead>
                <tr>
                    <th>
                        @CommonText.FirstName
                    </th>
                    <th>
                        @CommonText.LastName
                    </th>
                    <th>
                        @CommonText.Mobile
                    </th>
                    <th>
                        @CommonText.Email
                    </th>
                    <th class="text-center">
                        @CommonText.Actions
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Result)
                {
                    <tr>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.Mobile
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td class="text-sm-center">
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-brand m-btn m-btn--icon">

                                <i class="fa fa-edit"></i>

                                @CommonText.Edit

                            </a>
                            <a class="btn btn-sm btn-danger m-btn m-btn--icon"
                               asp-ajax="true"
                               asp-confirm="true"
                               asp-action="Delete"
                               asp-ajax-success-method="updateListFromDiv('#list');"
                               asp-route-id="@item.Id"
                               asp-ajax-block="#list">

                                <i class="fa fa-trash"></i>
                                @CommonText.Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>


}
else
{
    <metro-no-records />
}