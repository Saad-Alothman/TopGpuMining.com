@model SearchResult<PriceSource>

@{
    //IF following convention, and standard controller, you need to change only the following:
    //1- Model Type SearchResult<THE_MODEL_HERE>
    //2- itemName variable
    //3- searchCrietriaViewModel type
    //4- Model specific columns and headers




    //settings
    string itemName = "model";
    string itemNameUpperFirstLetter = itemName.ToProperCase();
    string controllerName = itemNameUpperFirstLetter;

    string listId = $"{itemName}-list";
    string listSelector = $"#{listId}";
    string editFormSelector = $"#edit-{itemName}-form-div";
    string deleteFormSelector = $"#delete-{itemName}-form-div";
    //Example showEditBrand();
    string editAlgorithmJavascriptMethod = $"showEdit{itemNameUpperFirstLetter }()";
    string deletealgorithmJavascriptMethod = $"showDelete{itemName.ToProperCase()}()";

    var search = Model.SearchCriteria as PriceSourceSearchCrieteriaViewModel;
    bool isShowAction = false;
}

@if (Model.Result.Any())
{
    <div class="table-responsive-sm">
        <table class="table table-striped table-bordered">

            <caption>
                <p>
                    <strong>
                        @CommonText.Total:
                    </strong>
                    @Model.TotalResultsCount.ToString("N0")
                </p>


                <cs-pager cs-pager-ul-class="pagination"
                          cs-pager-li-other-class="page-item"
                          cs-pager-link-other-class="page-link"
                          cs-pager-li-current-class="page-item active"
                          cs-pager-link-current-class="page-link"
                          cs-paging-pagesize="@Model.PageSize"
                          cs-paging-pagenumber="@Model.PageNumber"
                          cs-paging-totalitems="@Model.TotalResultsCount"
                          asp-all-route-data="@search.ToRouteValueDictionary()"
                          cs-ajax-target="#list"
                          cs-ajax-begin="block('#list')"
                          cs-ajax-complete="unblock('#list')"
                          asp-action="Index">

                </cs-pager>

                <input type="hidden" data-route value="@Url.RouteUrl(search.ToRouteValueDictionary(true))" />

            </caption>

            <thead>
                <tr>
                    @* Begin Model specific Headers *@
                    <th>
                        @Html.DisplayNameFor(a => a.Result.First().Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(a => a.Result.First().Url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.Result.First().IsScrape)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.Result.First().RequiresJavascript)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.Result.First().PriceSourceType)
                    </th>
                    @* END Model specific Headers *@

                    @if (isShowAction && User.IsInRole("Admin"))
                    {
                        <th>
                            @CommonText.Actions
                        </th>

                    }

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Result)
                {
                <tr>

                    @* Begin Model specific columns *@

                    <td>
                        @(item.Name?.ToString())
                    </td>
                    <td>
                        @(item.Url?.ToString())
                    </td>
                    <td>
                        @(item.IsScrape.ToString())
                    </td>
                    <td>
                        @(item.RequiresJavascript.ToString())
                    </td>

                    <td>
                        @(item.PriceSourceType.ToString())
                    </td>
                    @* END Model specific columns *@
                    @if (isShowAction && User.IsInRole("Admin"))
                    {
                        <td class="text-sm-center">

                            <a asp-ajax="true"
                               asp-ajax-block="#list"
                               asp-ajax-replace="#edit-div"
                               asp-form-id="#edit-form"
                               asp-action="Edit"
                               asp-ajax-success-method="showModal('#edit-modal')"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-brand m-btn m-btn--icon">

                                <i class="fa fa-edit"></i>

                                @CommonText.Edit
                            </a>

                            <a class="btn btn-sm btn-danger m-btn m-btn--icon"
                               asp-ajax="true"
                               asp-confirm="true"
                               asp-action="Delete"
                               asp-ajax-success-method="updateListFromDiv('#list');"
                               asp-route-id="@item.Id"
                               asp-ajax-block="#list">
                                <i class="fa fa-trash"></i>
                                @CommonText.Delete

                            </a>
                        </td>
                    }
                </tr>
                }

            </tbody>

                </table>
            </div>


        }
                else
                {
                <metro-no-records />
                }