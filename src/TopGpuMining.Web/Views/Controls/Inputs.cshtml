@model ControlsViewModel
@{
    ViewData["Title"] = "Inputs";
}


<div class="row">

    <div class="col-md-6">

        <div class="kt-portlet kt-portlet--responsive-mobile" id="portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="flaticon-calendar-1 kt-font-brand"></i>
                    </span>
                    <h3 class="kt-portlet__head-title kt-font-brand">
                        @CommonText.Dates
                    </h3>
                </div>
            </div>
            <div class="kt-portlet__body">

                <div class="form-group ">
                    <div class="input-group">

                        <input type="text" autocomplete="off" class="form-control date-picker" id="default-datepicker" />

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <i class="fa fa-calendar"></i>
                            </div>

                            <button type="button" class="btn btn-primary btn-icon" data-for="default-datepicker" onclick="switchDate(this)">
                                <i class="fa fa-sync-alt"></i>
                            </button>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <datetime-picker asp-for="StartDate" />
                    </div>
                    <div class="col-md-6">
                        <datetime-picker asp-for="EndDate" />
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="col-md-6">

        <div class="kt-portlet kt-portlet--responsive-mobile" id="portlet">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="flaticon-calendar-1 kt-font-brand"></i>
                    </span>
                    <h3 class="kt-portlet__head-title kt-font-brand">
                        @CommonText.Radios
                    </h3>
                </div>
            </div>
            <div class="kt-portlet__body">

                <div class="form-group">
                    <label class="kt-checkbox kt-checkbox--bold kt-checkbox--brand">

                        <input type="checkbox" asp-for="Enabled" />

                        @Html.DisplayNameFor(a => a.Enabled)

                        <span></span>

                        <span asp-validation-for="Enabled" />
                    </label>
                </div>

                <h4>Radios</h4>
                <hr />

                <div class="form-group">
                    <label asp-for="Gender">

                    </label>
                    <br />
                    <label class="kt-radio kt-radio--bold kt-radio--brand">
                        <input type="radio" asp-for="Gender" value="0">
                        @CommonText.Male
                        <span></span>
                    </label>
                    <label class="kt-radio kt-radio--bold kt-radio--brand ml-3">
                        <input type="radio" asp-for="Gender" value="1">
                        @CommonText.Female
                        <span></span>
                    </label>

                    <span asp-validation-for="Gender" />
                </div>

                <div class="form-group">
                    <label>Bold Checkboxes</label>
                    <div class="kt-checkbox-list">
                        <label class="kt-checkbox kt-checkbox--solid">
                            <input type="checkbox"> Default
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--solid">
                            <input type="checkbox" checked="checked"> Checked
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--solid kt-checkbox--disabled">
                            <input type="checkbox" disabled="disabled"> Disabled
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--solid kt-checkbox--success">
                            <input type="checkbox"> Success state
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--solid kt-checkbox--brand">
                            <input type="checkbox"> Brand state
                            <span></span>
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Bold Checkboxes</label>
                    <div class="kt-checkbox-list">
                        <label class="kt-checkbox kt-checkbox--bold">
                            <input type="checkbox"> Default
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--bold">
                            <input type="checkbox" checked="checked"> Checked
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--bold kt-checkbox--disabled">
                            <input type="checkbox" disabled="disabled"> Disabled
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--bold kt-checkbox--success">
                            <input type="checkbox"> Success state
                            <span></span>
                        </label>
                        <label class="kt-checkbox kt-checkbox--bold kt-checkbox--brand">
                            <input type="checkbox"> Brand state
                            <span></span>
                        </label>
                    </div>
                    <span class="form-text text-muted">Some help text goes here</span>
                </div>

            </div>
        </div>
    </div>
</div>


