@model SearchResult<Brand>

@using X.PagedList.Mvc;

<div class="table-responsive">
    <table class="table table-striped table-bordered">

        <tr>
            <th>
                @Html.DisplayNameFor(a => a.Result.First().Name)
            </th>

            <th>
                @Html.DisplayNameFor(a => a.Result.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Result.First().Company)
            </th>

            <th>
                @Common.Actions
            </th>
        </tr>

        @foreach (var item in Model.Result)
    {
            <tr>
                <td>
                    @(item.Name?.ToString())
                </td>
                
                <td>
                    @(item.Description?.ToString())
                </td>
                <td>
                    @(item.Company?.Name?.ToString())
                </td>
                <td width="180">
                    <a href="@Url.Action("Edit","Brand",new { id = item.ID })"
                       @CHRSAjaxOptions.GenerateAjaxUnobtrusiveHtmlAttributes(new CHRSAjaxOptions("#costcenter-list", "#edit-costcenter-form-div", completeMethods: "showEditBrand();"))
                       class="btn btn-sm green">
                        <i class="fa fa-edit"></i>
                        @Common.Edit
                    </a>

                    <a href="@Url.Action("Delete", "Brand", new { id = item.ID })"
                       @CHRSAjaxOptions.GenerateAjaxUnobtrusiveHtmlAttributes( new CHRSAjaxOptions( "#costcenter-list", "#delete-costcenter-form-div", method: FormMethod.Get, completeMethods: "showDeleteBrand();"))
                       class="btn btn-sm red">
                        <i class="fa fa-remove"></i>
                        @Common.Delete
                    </a>
                </td>
            </tr>
    }

    </table>

</div>

@Html.PagedListPager(Model.ToPagedList(), page => Url.Action("Index", "Brand", new { page = page })
                    , PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
                    {
                        HttpMethod = "GET",
                        OnBegin = "block('#costcenter-list')",
                        OnComplete = "unblock('#costcenter-list')",
                        UpdateTargetId = "costcenter-list"
                    }))